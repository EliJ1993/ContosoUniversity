@model SchedulerApp.Models.Student

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FirstMidName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstMidName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.EnrollmentDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EnrollmentDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Enrollments)
        </dt>
        <!--<dt>
            @@Html.DisplayNameFor(model => model.TotalUnits)
        </dt>-->
        <dd>
            <table class="table">
                <tr>
                    <th>Course Title</th>
                    <th>Grade</th>
                    <th>Total Credits</th>
                </tr>
                @foreach (var item in Model.Enrollments)
                {
                  
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Grade)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => (item.Course.Credits))
                        </td>
                        <!--@@item.Student.TotalUnits += (modelItem => item.Course.Credits) -->                       
                    </tr>
                }
                <!--<td>
                @@Html.DisplayFor(modelItem => item.Student.TotalUnits)
            </td>-->

            </table>
        </dd>
    </dl>
</div>
